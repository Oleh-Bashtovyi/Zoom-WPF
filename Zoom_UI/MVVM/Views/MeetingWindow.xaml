<Window x:Class="Zoom_UI.MVVM.Views.MeetingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoom_UI.MVVM.Views"
        xmlns:viewmodel="clr-namespace:Zoom_UI.MVVM.ViewModels"
        xmlns:converters="clr-namespace:Zoom_UI.MVVM.Converters"
        mc:Ignorable="d"
        Title="MeetingWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewmodel:MeetingViewModel/>
    </Window.DataContext>


    <Window.Resources>
        <converters:BoolToMicrophoneImageConverter x:Key="BoolToMicrophoneImageConverter"/>
        <converters:BoolToCameraImageConverter x:Key="BoolToCameraImageConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="210"/>
        </Grid.ColumnDefinitions>

        
        
        
        <Border Grid.Row="1" Margin="10" Style="{StaticResource DefaultBorder}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

                <StackPanel.Resources>
                    <Style TargetType="Button" x:Key="RoundButton">
                        <Style.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Style.Resources>
                        <Setter Property="Width" Value="50"/>
                        <Setter Property="Height" Value="50"/>
                    </Style>
                    <Style TargetType="Image">
                        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
                    </Style>
                </StackPanel.Resources>

                <Button Command="{Binding SwitchMicrophonState}" Style="{DynamicResource RoundButton}">
                    <Image Source="{Binding CurrentUser.IsMicrophoneOn, Converter={StaticResource BoolToMicrophoneImageConverter}}"/>
                </Button>
            </StackPanel>
        </Border>
        
        
        <!--<ListView ItemsSource="{Binding Users}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Username}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->
    </Grid>
</Window>
